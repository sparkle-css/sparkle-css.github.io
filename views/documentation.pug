extends ./config/base
include ./mixins/_banner
include ./mixins/_links
include ./mixins/_nav

block style
  +links(title)

block content
  //- Variables
  -var docVersion = 'v0.1.0';

  //- Contents
  //- NAV
  +nav(title)
  
  //- MAIN
  main
    //- HERO
    +banner(title, subtitle)
  
    //- PROJECT
    .project
      .wrapper.make-padding-50-vertical
        .make-text-centered.make-margin-30-bottom
          h3 Learn to Build with Sparkle
        .columns
          //--- Components ---//
          .column
            a(href="/documentation/components").box.make-text-centered
              i.fa.fa-cube.fa-3x
              p.make-text-size3.make-text-bold Components
              p.make-text-size5.make-text-normal The building blocks of the framework.
          //--- Forms ---//
          .column
            a(href="/documentation/forms").box.make-text-centered
              i.fa.fa-list.fa-3x
              p.make-text-size3.make-text-bold Forms
              p.make-text-size5.make-text-normal The elements essential to style a clean form UI.
          //--- Layouts ---//
          .column
            a(href="/documentation/layouts").box.make-text-centered
              i.fa.fa-object-group.fa-3x
              p.make-text-size3.make-text-bold Layouts
              p.make-text-size5.make-text-normal The overall structural flow of the page.
          //--- Utilities ---//
          .column
            a(href="/documentation/utilities").box.make-text-centered
              i.fa.fa-cogs.fa-3x
              p.make-text-size3.make-text-bold Utilities
              p.make-text-size5.make-text-normal The additional functionalities for optimum designs.

  //- FOOTER
  include ./layouts/footer