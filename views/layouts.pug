                  &nbsp;&nbsp;&lt;tbody&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;tr&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;td&gt;John Doe&lt;/td&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;td&gt;1234&lt;/td&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;td&gt;Web Developer, UX Designer&lt;/td&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;/tr&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;tr&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;td&gt;Suzan Moore&lt;/td&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;td&gt;ABCD&lt;/td&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;td&gt;Professional Speaker, Advertiser&lt;/td&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;/tr&gt;<br>
                  &nbsp;&nbsp;&lt;/tbody&gt;<br>
                  &nbsp;&nbsp;&lt;tfoot&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;tr&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;th&gt;Name&lt;/th&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;th&gt;ID&lt;/th&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;th&gt;Profession&lt;/th&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;/tr&gt;<br>
                  &nbsp;&nbsp;&lt;/tfoot&gt;<br>
                  &lt;/table&gt;
            
          //- DIVS
          .columns
            .column
              .table
                .table__caption Table using &lt;div&gt;
                .table__header
                  .table__row
                    .table__cell Name
                    .table__cell ID
                    .table__cell Profession
                .table__body
                  .table__row
                    .table__cell John Doe
                    .table__cell 1234
                    .table__cell Web Developer, UX Designer
                  .table__row
                    .table__cell Suzan Moore
                    .table__cell ABCD
                    .table__cell Professional Speaker, Advertiser
                .table__footer
                  .table__row
                    .table__cell Name
                    .table__cell ID
                    .table__cell Profession
            .column
              .sticker
                code.
                  &lt;div class="<strong>table</strong>"&gt;<br>
                  &nbsp;&nbsp;&lt;div class="<strong>table__caption</strong>"&gt;Table using DIV&lt;/div&gt;<br>
                  &nbsp;&nbsp;&lt;div class="<strong>table__header</strong>"&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__row</strong>"&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;Name&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;ID&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;Profession&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;/div&gt;<br>
                  &nbsp;&nbsp;&lt;/div&gt;<br>
                  &nbsp;&nbsp;&lt;div class="<strong>table__body</strong>"&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__row</strong>"&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;John Doe&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;1234&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;Web Developer, UX Designer&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__row</strong>"&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;Suzan Moore&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;ABCD&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;Professional Speaker, Advertiser&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;/div&gt;<br>
                  &nbsp;&nbsp;&lt;/div&gt;<br>
                  &nbsp;&nbsp;&lt;div class="<strong>table__footer</strong>"&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__row</strong>"&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;Name&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;ID&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;div class="<strong>table__cell</strong>"&gt;Profession&lt;/div&gt;<br>
                  &nbsp;&nbsp;&nbsp;&nbsp;&lt;/div&gt;<br>
                  &nbsp;&nbsp;&lt;/div&gt;<br>
                  &lt;/div&gt;

  //- FOOTER
  include ./layouts/footer