          .column
            .sticker
              code.
                &lt;span class="tag make-$type <strong>make-reverse</strong>"&gt;Button&lt;/span&gt;
 
        //- OUTLINED      
        .grid.make-gutters
          .column
            .tags
              span.tag.make-primary.make-outline Primary
              span.tag.make-info.make-outline Info
              span.tag.make-success.make-outline Success
