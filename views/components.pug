              button.button.make-dark.make-reverse Dark
          .column
            .sticker
              code.
                &lt;button class="button make-$type <strong>make-reverse</strong>"&gt;Button&lt;/button&gt;<br>
 
        //- OUTLINED      
        .grid.make-gutters
          .column
            .buttons
              button.button.make-primary.make-outline Primary
              button.button.make-info.make-outline Info
              button.button.make-success.make-outline Success
              button.button.make-warning.make-outline Warning
              button.button.make-danger.make-outline Danger
              button.button.make-light.make-outline Light
              button.button.make-dark.make-outline Dark
          .column
            .sticker
              code.
                &lt;button class="button make-$type <strong>make-outline</strong>"&gt;Button&lt;/button&gt;<br>
                
        //- REVERSED OUTLINED      
        .grid.make-gutters
          .column
            .buttons
              button.button.make-primary.make-outline.make-reverse Primary
              button.button.make-info.make-outline.make-reverse Info
              button.button.make-success.make-outline.make-reverse Success
              button.button.make-warning.make-outline.make-reverse Warning
              button.button.make-danger.make-outline.make-reverse Danger
